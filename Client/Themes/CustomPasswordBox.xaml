<UserControl x:Class="JavaProject___Client.Themes.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JavaProject___Client.Themes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox Margin="0,20,0,0" x:Name="customPasswordBox" 
                 Width="300" FontSize="18" materialDesign:HintAssist.Hint="Enter Password" 
                 materialDesign:HintAssist.FloatingOffset="-20,-40"
                     materialDesign:HintAssist.Background="Transparent"
                 BorderThickness="2" BorderBrush="#4E72AB" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>

</UserControl>
